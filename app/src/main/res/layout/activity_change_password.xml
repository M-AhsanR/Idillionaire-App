<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChangePassword"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="5"
    android:id="@+id/change_main_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#040404"
            android:id="@+id/title_pass"/>
    <RelativeLayout
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/back_settings">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow" />
    </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#070707"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="vertical"
        android:gravity="center"
        style="@style/edit_fieldcomplete"
        android:layout_margin="15dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="Current Password"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textCursorDrawable="@null"
                android:focusable="true"
                android:inputType="textPassword"
                android:layout_gravity="center"
                style="@style/edit_fieldbackgroundlogin"
                android:id="@+id/current_pass"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#C6C5CA"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="New Password"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textCursorDrawable="@null"
                android:focusable="true"
                android:inputType="textPassword"
                android:layout_gravity="center"
                style="@style/edit_fieldbackgroundlogin"
                android:id="@+id/new_pass"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#C6C5CA"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="Confirm Password"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textCursorDrawable="@null"
                android:focusable="true"
                android:inputType="textPassword"
                android:layout_gravity="center"
                style="@style/edit_fieldbackgroundlogin"
                android:id="@+id/confirm_pass"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".45"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Update"
            android:textSize="18sp"
            style="@style/started_button"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:id="@+id/update_btn" />
    </LinearLayout>

</LinearLayout>